@{
    ViewData["Title"] = "Movie Form";
}

@model Mission4.Models.MovieEntry

<h1>Submit a movie entry here:</h1>
<div>
    <form>
        <label asp-for="Category">Category: </label>
        <input asp-for="Category" /> </br>

        <label asp-for="Title">Title: </label>
        <input asp-for="Title" /></br>

        <label asp-for="Year">Year: </label>
        <input asp-for="Year" /></br>

        <label asp-for="DirectorFirstName">Director First Name: </label>
        <input asp-for="DirectorFirstName" /></br>

        <label asp-for="DirectorLastName">Director Last Name: </label>
        <input asp-for="DirectorLastName" /></br>

        <label asp-for="Rating">Rating: </label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select></br>

        <label asp-for="Edited">Edited: </label>
        <input asp-for="Edited" /></br>

        <label asp-for="LentTo">Lent to: </label>
        <input asp-for="LentTo" /></br>

        <label asp-for="Notes">Notes: </label>
        <input asp-for="Notes" /></br>

        <button type="submit">Submit Entry</button>

    </form>
    <div asp-validation-summary="All"></div>
</div>